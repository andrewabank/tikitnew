{% extends "AcmeDemoBundle::layout.html.twig" %}

{% block title "Symfony - Add Tikit form" %}

{% block content %}
        <tbody>
            {%for tikit in tikits%}
                <p>{{tikit.0.tikitTitle}}</p>
                <p>{{tikit.username}}</p>
                <div class="entry unvoted">
                    <p class="title">
                    <a class="title loggedin" href="{{tikit.0.tikitUrl}}" tabindex="1">{{tikit.0.tikitTitle}}</a> 
                    <span class="domain">(<a href="/domain/i.imgur.com/">i.imgur.com</a>)</span></p>
                    <p class="tagline">поступило <time title="Sun Nov 3 09:19:06 2013 UTC" datetime="2013-11-03T09:19:06+00:00">{{tikit.0.dateAdded|date('Y-m-d H:i:s')}}</time> <a href="http://ru.reddit.com/user/jkjkjij22" class="author id-t2_6sczy">jkjkjij22</a>
                    <span class="userattrs"></span> в <a href="http://ru.reddit.com/r/pics/" class="subreddit hover">pics</a>
                    </p><ul class="flat-list buttons">
                    <li class="first">
                    <a class="comments" href="http://ru.reddit.com/r/pics/comments/1psut6/honest_canadian_commuters_the_workers_were/" target="_parent">405 комментариев</a>
                    </li>
                </div>
            {%endfor%}
        </tbody>
        <div class="span4">
            {%if total_pages > 0%}
                <div class="pagination">
                    {%for i in 1..total_pages%}
                    <ul>
                        {%if loop.first%}
                            <li class="prev {%if current_page==1%} disabled{%endif%}"><a href="#"><-Previous</a></li>
                        {%endif%}
                        <li {%if current_page==loop.index%}class="active"{%endif%}><a href="">{{loop.index}}</a></li>
                        {%if loop.last%}
                            <li class="next {%if current_page==total_pages%} disabled{%endif%}"><a href="#">Next-></a></li>
                        {%endif%}
                    </ul>
                    {%endfor%}
                </div>
            {%endif%}
        </div>
{% endblock %}
